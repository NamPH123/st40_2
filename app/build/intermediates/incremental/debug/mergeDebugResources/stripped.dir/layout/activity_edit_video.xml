        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center"
            android:text="@string/edit_video"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imvBack"
            app:layout_constraintEnd_toStartOf="@+id/imvSave"
            app:layout_constraintStart_toEndOf="@+id/imvBack"
            app:layout_constraintTop_toTopOf="@+id/imvBack" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_save"
            app:layout_constraintBottom_toBottomOf="@+id/imvBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imvBack" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111111"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.namseox.st040_mecut.view.customview.CustomHorizontalScrollView
            android:id="@+id/ctv"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintBottom_toTopOf="@+id/rcv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:id="@+id/llMute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="58dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mute" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bevietnampro_regular"
                        android:text="@string/mute"
                        android:textColor="#CCFFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingTop="46dp"
                    app:layout_constraintStart_toEndOf="@id/llMute">

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView4"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView5"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView6"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView7"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView8"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView9"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />

                    <com.namseox.st040_mecut.view.customview.OptiTimeLineView
                        android:id="@+id/timeLineView10"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:padding="1dp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/bevietnampro_regular"
                    android:text="@string/music"
                    android:textColor="#80FFFFFF"
                    android:textSize="8sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/cv"
                    app:layout_constraintTop_toBottomOf="@id/cv" />

                <com.namseox.st040_mecut.view.customview.HomePlayerVisualizerView
                    android:id="@+id/imvVisualizer"
                    android:layout_width="500dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/cv"
                    app:layout_constraintTop_toBottomOf="@id/tvMusic" />

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="36dp"
                    android:src="@drawable/bg_colume"
                    app:layout_constraintStart_toStartOf="@id/cv" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.namseox.st040_mecut.view.customview.CustomHorizontalScrollView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@+id/tvZoom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/zoom_json" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvZoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/bevietnampro_regular"
            android:gravity="center"
            android:text="@string/zoom_in_out_to_adjust_time"
            android:textColor="#c0c0c0"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/ctv" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_thmeme1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/ctl">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imvPlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_pause" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/bevietnampro_regular"
                android:text="00:00"
                android:textColor="#66FFFFFF"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tvDuration"
                android:fontFamily="@font/bevietnampro_regular"
                android:text="00:00/"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="134dp"
            android:padding="2dp"
            android:src="@drawable/ic_add_2"
            app:layout_constraintBottom_toTopOf="@+id/rcv"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/layoutSpeed"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/rcv" android:tag="binding_1">

            <include layout="@layout/layout_speed" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layoutStiker"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/rcv" android:tag="binding_2">

            <include layout="@layout/layout_stiker" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layoutText"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/rcv" android:tag="binding_3">

            <include layout="@layout/layout_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layoutFrame"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/rcv" android:tag="binding_4">

            <include layout="@layout/layout_frame" />
        </FrameLayout>
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/imvCover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="#99111111"/>

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:indeterminateDrawable="@drawable/custom_progress_bar_cycle"
            android:indeterminateOnly="true"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         