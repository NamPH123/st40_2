<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:tag="layout/item_select_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="center"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize4Percents" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvDelete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_delete_red"
            android:scaleType="center"
            app:layout_constraintBottom_toTopOf="@id/imv"
            app:layout_constraintEnd_toEndOf="@id/imv"
            app:layout_constraintStart_toEndOf="@id/imv"
            app:layout_constraintTop_toTopOf="@id/imv" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/bevietnampro_regular"
            android:textSize="8sp"
            android:paddingHorizontal="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_card_border5"
            app:layout_constraintEnd_toEndOf="@id/imv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
         